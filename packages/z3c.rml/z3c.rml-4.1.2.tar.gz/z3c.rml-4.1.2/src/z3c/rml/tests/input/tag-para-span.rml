<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE document SYSTEM "rml.dtd">

<document
    filename="tag-paraWordWrap.pdf"
    xmlns:doc="http://namespaces.zope.org/rml/doc">

  <template>
    <pageTemplate id="main">
      <frame id="first" x1="5cm" y1="1cm" width="10cm" height="26cm"/>
    </pageTemplate>
  </template>

  <stylesheet>
    <spanStyle
        name="important"
        textColor="red"
        backColor="#FFFFDD"
        doc:example=""
        />
  </stylesheet>

  <story>
    <para>
      This is paragraph with an
      <span style="important">important message</span>!
      <b>More<i> important <span>piece</span> of </i>information</b>
    </para>
  </story>

</document>
