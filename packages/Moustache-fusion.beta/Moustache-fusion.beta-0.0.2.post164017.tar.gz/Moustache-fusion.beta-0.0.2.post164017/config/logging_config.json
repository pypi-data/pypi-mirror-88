{ 
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": { 
        "default": {
            "format": "%(asctime)s - %(levelname)-8s - %(threadName)-12s - %(relsource)-37s - %(message)s"
        }
    },
    "filters": { 
        "relpath": {
            "()": "moustache_fusion.logger.RelsourceFilter",
            "regexps": [
                "^\\./",
                "^/app/",
                "^.*/lib/python[0-9]+(.[0-9]+)*/(dist|site)-packages/"
            ]
        }
    },
    "handlers": { 
        "default": { 
            "level": "DEBUG",
            "formatter": "default",
            "filters": ["relpath"],
            "class": "logging.StreamHandler",
            "stream": "ext://sys.stdout"
        }
    },
    "loggers": {
    },
    "root": { 
        "handlers": ["default"],
        "level": "DEBUG"
    }
}
