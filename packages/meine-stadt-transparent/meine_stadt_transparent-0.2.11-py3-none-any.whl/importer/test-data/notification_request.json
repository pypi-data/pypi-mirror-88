{
    "index": [
        "mst-test-file",
        "mst-test-meeting",
        "mst-test-paper",
        "mst-test-organization",
        "mst-test-person"
    ],
    "body": {
        "query": {
            "bool": {
                "filter": [
                    {
                        "range": {
                            "modified": {
                                "gte": "2020-05-17T12:07:37.887853+00:00"
                            }
                        }
                    }
                ],
                "should": [
                    {
                        "multi_match": {
                            "query": "Digitalisierungsstrategie",
                            "operator": "and",
                            "fields": [
                                "agenda_items.title",
                                "body.name",
                                "description",
                                "filename",
                                "family_name",
                                "given_name",
                                "name",
                                "parsed_text^0.5",
                                "short_name",
                                "type",
                                "reference_number"
                            ]
                        }
                    },
                    {
                        "multi_match": {
                            "query": "Digitalisierungsstrategie",
                            "operator": "and",
                            "fields": [
                                "agenda_items.title",
                                "body.name",
                                "description",
                                "filename",
                                "family_name",
                                "given_name",
                                "name",
                                "parsed_text^0.5",
                                "short_name",
                                "type",
                                "reference_number"
                            ],
                            "fuzziness": "1",
                            "prefix_length": 1
                        }
                    }
                ],
                "minimum_should_match": 1
            }
        },
        "aggs": {
            "_filter_document_type": {
                "filter": {
                    "match_all": {}
                },
                "aggs": {
                    "document_type": {
                        "terms": {
                            "field": "_index"
                        }
                    }
                }
            },
            "_filter_person": {
                "filter": {
                    "match_all": {}
                },
                "aggs": {
                    "person": {
                        "terms": {
                            "field": "person_ids"
                        }
                    }
                }
            },
            "_filter_organization": {
                "filter": {
                    "match_all": {}
                },
                "aggs": {
                    "organization": {
                        "terms": {
                            "field": "organization_ids"
                        }
                    }
                }
            }
        },
        "sort": [
            "_score"
        ],
        "indices_boost": [
            {
                "mst-test-person": 4
            },
            {
                "mst-test-organization": 4
            },
            {
                "mst-test-paper": 2
            }
        ],
        "_source": [
            "id",
            "name",
            "legal_date",
            "reference_number",
            "display_date"
        ],
        "highlight": {
            "fields": {
                "*": {
                    "fragment_size": 150,
                    "pre_tags": "<mark>",
                    "post_tags": "</mark>"
                }
            }
        }
    }
}
